{
  "name": "hr-finance-erp",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nx run-many --target=serve --projects=frontend,backend --parallel",
    "build": "nx run-many --target=build --projects=backend,frontend",
    "start": "nx run-many --target=start --projects=backend,frontend --parallel",
    "frontend:dev": "nx serve frontend",
    "backend:dev": "nx serve backend",
    "frontend:build": "nx build frontend",
    "backend:build": "nx build backend",
    "build:prod": "npm run backend:build && npm run frontend:build",
    "start:prod": "npm run backend:start & npm run frontend:start"
  },
  "devDependencies": {
    "@nx/next": "^19.0.0",
    "@nx/node": "^19.0.0",
    "@nx/workspace": "^19.0.0",
    "nx": "^19.0.0",
    "typescript": "^5.5.2"
  }
}