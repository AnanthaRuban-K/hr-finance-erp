{
  "name": "hr-backend",
  "version": "1.0.0",
  "type": "module",
  
  "scripts": {
    "build": "node --max_old_space_size=8192 ./node_modules/typescript/bin/tsc",
    "build:incremental": "node --max_old_space_size=8192 ./node_modules/typescript/bin/tsc --incremental",
    "build:fast": "node --max_old_space_size=8192 ./node_modules/typescript/bin/tsc --skipLibCheck --incremental",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "prebuild": "npm run clean",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts"
  },

  "dependencies": {
    "@aws-sdk/client-s3": "^3.844.0",
    "@aws-sdk/s3-request-presigner": "^3.844.0",
    "@clerk/nextjs": "^6.26.0",
    "@hono/node-server": "^1.8.2",
    "@hono/trpc-server": "^0.4.0",
    "@hono/zod-validator": "^0.7.2",
    "@paralleldrive/cuid2": "^2.2.2",
    "@trpc/server": "^11.4.3",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.30.10",
    "hono": "^4.8.5",
    "minio": "^8.0.5",
    "multer": "^2.0.1",
    "pg": "^8.11.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/minio": "^7.1.0",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.20.8",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
