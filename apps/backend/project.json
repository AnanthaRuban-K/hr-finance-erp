{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/backend/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/backend"],
      "options": {
        "command": "node --max_old_space_size=4096 ./node_modules/typescript/bin/tsc -p apps/backend/tsconfig.json --outDir dist/apps/backend",
        "cwd": "{workspaceRoot}"
      }
    },
    "build-nx": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/backend",
        "tsConfig": "apps/backend/tsconfig.json",
        "main": "apps/backend/src/index.ts"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run dev",
        "cwd": "apps/backend"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run start",
        "cwd": "apps/backend"
      }
    }
  }
}